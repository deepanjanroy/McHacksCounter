{
  "manifest_version": 2,

  "name": "McHacks Counter",
  "description": "This extension monitors how many people are going to McHacks.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "https://www.facebook.com/",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
